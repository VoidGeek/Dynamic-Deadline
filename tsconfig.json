{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Compiled files go here
    "rootDir": "./src" // Source files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
